<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_frient_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/in_title"
        layout="@layout/view_layout_title"/>
    <RelativeLayout
        android:id="@+id/ll_user"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/in_title"
        android:background="@drawable/ease_mm_listitem"
        android:duplicateParentState="true"
       >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:scaleType="fitXY"
            android:src="@drawable/em_default_avatar" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/avatar"
            android:textColor="#0F0F0F"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/avatar"
            android:layout_below="@id/name"
            android:textColor="#0F0F0F"
            android:textSize="20sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_set_info"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/ll_user"
        android:layout_centerVertical="true"
        android:layout_marginTop="18dp"
        android:textSize="20sp"
        android:background="@color/white"
        android:text="设置备注和标签"
        android:gravity="center_vertical"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tv_send_msg"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/tv_set_info"
        android:layout_centerVertical="true"
        android:layout_marginTop="18dp"
        android:textSize="20sp"
        android:background="@color/green"
        android:text="发消息"
        android:gravity="center"
        android:textColor="@color/white"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_send_video"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/tv_send_msg"
        android:layout_centerVertical="true"
        android:layout_marginTop="18dp"
        android:textSize="20sp"
        android:background="@color/white"
        android:text="视频聊天"
        android:textColor="@color/black"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_add_contact"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/tv_set_info"
        android:layout_centerVertical="true"
        android:layout_marginTop="18dp"
        android:textSize="20sp"
        android:background="@color/green"
        android:text="添加好友到通讯录"
        android:gravity="center"
        android:textColor="@color/black"
        android:visibility="gone"/>

</RelativeLayout>
